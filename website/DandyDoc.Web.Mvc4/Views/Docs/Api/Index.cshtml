@model DandyDoc.CodeDoc.ICodeDocEntityRepository
@{
  Layout = "./_Layout.cshtml";
  <section>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><i class="icon-info-sign"></i></th>
          <th>Namespace</th>
          <th>Assembly</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var namespaceModel in Model.Namespaces) {
          <tr>
            <td><i class="icon-gift"></i></td>
            <td><a href="@Url.Action("Api", new{cRef = namespaceModel.CRef.FullCRef})">@namespaceModel.ShortName</a></td>
            <td>@String.Join(", ", namespaceModel.Assemblies.Select(a => a.ShortName))</td>
          </tr>
        }
      </tbody>
    </table>
  </section>
}