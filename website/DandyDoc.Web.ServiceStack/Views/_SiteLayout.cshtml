@inherits ServiceStack.Razor.ViewPage
@{
  string pageTitle = ViewBag.Title;
  if (String.IsNullOrWhiteSpace(pageTitle)) {
    pageTitle = "Dandy Doc";
  }
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@pageTitle</title>
  <link type="text/css" rel="stylesheet" href="~/css/bootstrap.cosmo.min.css" />
  <link type="text/css" rel="stylesheet" href="~/css/bootstrap-responsive.min.css" />
</head>
<body>
  <div class="container">
    <div class="row">
      <header class="span12">
        <h1>@pageTitle</h1>
        @if (!String.IsNullOrWhiteSpace(ViewBag.SubTitle)) {<p class="lead">@ViewBag.SubTitle</p>}
      </header>
    </div>
  </div>
  @RenderBody()
  <div class="container">
    <div class="row">
      <footer class="span12">
      </footer>
    </div>
  </div>
  <script type="text/javascript" src="~/js/jquery-1.10.1.min.js"></script>
  <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
</body>
</html>
